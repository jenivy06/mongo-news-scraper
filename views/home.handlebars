<div class="row">
    <div class="col-12">
        <div class="jumbotron titleJumbotron">
            <div class="headerDivJumbotron">
              <img src="https://www.prophet.com/relevantbrands-2017/wp-content/uploads/2016/10/Npr-logo.png" height="100px" width="100px">
                <div id="headerJumbotron">NPR News Scraper!</div>
                <div id="subheaderJumbotron"></div>
            </div>
        </div>
    </div>
</div>

<nav class="navbar navbar-expand" id="navbar">

    <ul class="navbar-nav">
        <li class="nav-item">
        <a class="nav-link navLink" href="/">Home</a>
        </li>
        <li class="nav-item">
        <a class="nav-link navLink" href="/saved">Saved Articles</a>
        </li>
    </ul>
    <br>
   
    
    <button type="button" class="btn btn-primary" id="scrapeArticlesButton">Scrape New Articles (may take a few seconds to load)</button>

</nav>

<!--section divider-->

<hr>
<div class="articleContainer">
    <div class="row">

        <div class="col-1">
        </div>

        <div class="col-10 articleColumn">

            {{#each articles}}

                <div class="card">
                    <div class="card-header">
                        <a class="headlineLink" href={{link}} target="_blank">{{headline}}</a>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-2">
                                <img class="articleImage" src={{photo}}>
                            </div>

                            <div class="col-8">
                                <p>{{summary}}{{date}}</p><br>
                            </div>
                            <br>
                            <div class="col-8">
                              <br>
                                <p id="noteTitle">{{data-notes}}</p>
                                <p id="noteBody">{{data-notes}}</p>
                            </div>

                            <div class="col-2 buttonColumn">
                                <div class="row buttonRow">
                                    <div class="col-12">
                                          <button type="button" class="btn btn-primary deleteSavedArticleButton" data-id={{id}}>Delete Article</button>
                                    </div>
                                </div>
                                <div class="row buttonRow">
                                    <div class="col-12">
                                          <button type="button" class="btn btn-primary addNoteButton" data-id={{id}} data-notes={{notes}}>Add Note</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            {{/each}}

        </div>

        <div class="col-1">
        </div>

    </div>
</div>


<div class="modal fade" id="scrapeArticlesModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title articlesScrapedTitle" >Articles Scraped</h5>
      </div>
      <div class="modal-body articlesScrapedBody">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" id="closeScrapeButton" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="articleSavedModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title articleSavedTitle" >Success!</h5>
      </div>
      <div class="modal-body articleSavedBody">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" id="closeArticleButton" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="noteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
 <div class="modal-dialog" role="document">
    <div class="modal-content">
       <!--<div class="modal-header noteModalHeader">
        <p id="previousNotes">Previous Notes: </p>
      </div>-->
      <div class="modal-body noteModalBody">
        
      </div>
      <button class='saveNoteButton'>Save Note</button>
      <div class='alertDiv'></div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>